live_config_reload = true
ipc_socket = true 

[shell]
program = "/bin/zsh"

[env]
TERM = 'xterm-256color'

[window]
padding = {x = 6,y = 6}
decorations = "None"
opacity = 0.94
resize_increments = false
title = "Alacritty"

[scrolling]
history = 10000
multiplier = 4

[font]
normal = {family = "JetbrainsMono NF", style = "Regular"}
size = 10
offset = {x = 1, y = 6}
glyph_offset = {x = 1, y = 1}
builtin_box_drawing = true

[colors]
draw_bold_text_with_bright_colors = true
transparent_background_colors = false

[colors.primary]
background = "#282a36"
foreground = "#f8f8f2"
bright_foreground = "#ffffff"

[colors.normal]

black = "#21222c"
red = "#ff5555"
green = "#50fa7b"
yellow = "#f1fa8c"
blue = "#bd93f9"
magenta = "#ff79c6"
cyan = "#8be9fd"
white = "#f8f8f2"

[colors.bright]

black = "#6272a4"
red = "#ff6e6e"
green = "#69ff94"
yellow = "#ffffa5"
blue = "#d6acff"
magenta = "#ff92df"
cyan = "#a4ffff"
white = "#ffffff"

[cursor]
style = {shape = "Underline", blinking = "Never"}

[colors.cursor]
text = "#282a36"
cursor = "#f8f8f2"

[colors.vi_mode_cursor]

text = "CellBackground"
cursor = "CellForeground"

[colors.selection]

text = "CellForeground"
background = "#44475a"

[colors.search.matches]

foreground = "#44475a"
background = "#50fa7b"

[colors.search.focused_match]

foreground = "#44475a"
background = "#ffb86c"

[colors.footer_bar]

background = "#282a36"
foreground = "#f8f8f2"

[colors.hints.start]

foreground = "#282a36"
background = "#f1fa8c"

[colors.hints.end]

foreground = "#f1fa8c"
background = "#282a36"


[terminal]
osc52 = "CopyPaste"

[mouse]
hide_when_typing = true
